{
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "./www",
    "moduleResolution":"nodenext",
    "allowSyntheticDefaultImports": true,    
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "types": [
      "@firebase/app",
      "@firebase/database",
      "lit"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["./node_modules"]
}