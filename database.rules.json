{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "admins": {
      ".read": "root.child('admins').child(auth.uid).child('admin').val() === true",
      ".write": "root.child('admins').child(auth.uid).child('owner').val() === true"
    },
    "orderKeys": {
      "$uid": {
        ".read": "$uid === auth.uid || root.child('admins').child(auth.uid).child('admin').val() === true",
        ".write": "$uid === auth.uid || root.child('admins').child(auth.uid).child('admin').val() === true"
      }
    },
    "orders": {
      "$uid": {
        ".read": "$uid === auth.uid || root.child('admins').child(auth.uid).child('admin').val() === true",
        ".write": "$uid === auth.uid || root.child('admins').child(auth.uid).child('admin').val() === true"
      }
    },
    "images": {
      ".read": "true",
      ".write": "root.child('admins').child(auth.uid).child('admin').val() === true"
    },
    "products": {
      ".read": "true",
      ".write": "root.child('admins').child(auth.uid).child('admin').val() === true"
    },
    "offers": {
      ".read": "true",
      ".write": "root.child('admins').child(auth.uid).child('admin').val() === true"
    },
    "offerDisplay": {
      ".read": "true",
      ".write": "root.child('admins').child(auth.uid).child('admin').val() === true"
    },
    "catalog": {
      ".read": "root.child('admins').child(auth.uid).child('admin').val() === true",
      ".write": "root.child('admins').child(auth.uid).child('admin').val() === true"
    },
    "users": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$uid": {
        ".read": "auth === $uid",
        ".write": "auth === $uid"
      }

    }
  }
}
